---
import socialLinks from "@data/social-links.json";
---

<footer>
  <nav>
    {socialLinks.map((link) => <a href={link.url}>{link.name}</a>)}
  </nav>
</footer>

<style lang="scss">
  footer {
    position: sticky;
    bottom: 0;
    border-top: 1px solid color-mix(in srgb, white 20%, var(--bg-color));
    background: color-mix(in srgb, transparent 20%, var(--bg-color));
    backdrop-filter: blur(5px);

    nav {
      display: flex;
      justify-content: center;
      align-items: center;

      a {
        padding: var(--spacing-md);
        font-size: 1rem;
        font-weight: 900;
        text-decoration: none;
        opacity: 0.7;
        &:hover {
          opacity: 1;
        }
      }
    }
  }
</style>
